{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "sourceMap": false,
    "target": "esnext",
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["es2015", "dom"]
  },
  "include": [
    "src/**/*.ts"
  ]
}
